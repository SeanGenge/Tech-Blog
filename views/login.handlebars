<div class="card custom-card">
	<div class="card-header custom-card-title text-center">
		Login
	</div>
	<div class="card-body custom-card-body">
		<form id="login-form">
			<div class="row">
				<div class="col">
					<div class="form-floating form-input">
						<input type="text" class="form-control" id="login-username" placeholder="username">	
						<label for="login-username" class="form-label">Username</label>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="form-floating form-input">
						<input type="password" class="form-control" id="login-password" placeholder="password">
						<label for="login-password" class="form-label">Password</label>
					</div>
				</div>
			</div>
			<div class="align-right">
				<button type="submit" class="btn btn-form btn-center">SIGN IN</button>
			</div>
			<div class="invalid-login-feedback text-danger">
				Incorrect username or password
			</div>
		</form>
	</div>
</div>
<script src="/js/login.js"></script>